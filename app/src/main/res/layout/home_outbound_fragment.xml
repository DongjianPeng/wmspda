<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/navigatorBackgroundColor"
                android:drawableLeft="@mipmap/shouhuo_white"
                android:paddingLeft="15dp"
                android:text="批次"
                android:textColor="@color/navigatorTextColor" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/navigatorBackgroundColor"
                android:drawableLeft="@mipmap/celiangleixing_white"
                android:paddingLeft="15dp"
                android:text="拣货"
                android:textColor="@color/navigatorTextColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/navigatorBackgroundColor"
                android:drawableLeft="@mipmap/celiangleixing_white"
                android:paddingLeft="15dp"
                android:text="复核"
                android:textColor="@color/navigatorTextColor" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/navigatorBackgroundColor"
                android:drawableLeft="@mipmap/shinshophuojia_white"
                android:paddingLeft="15dp"
                android:text="换标"
                android:textColor="@color/navigatorTextColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/navigatorBackgroundColor"
                android:drawableLeft="@mipmap/celiangleixing_white"
                android:paddingLeft="15dp"
                android:text="出货测量"
                android:textColor="@color/navigatorTextColor" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/navigatorBackgroundColor"
                android:drawableLeft="@mipmap/shinshophuojia_white"
                android:paddingLeft="15dp"
                android:text="包装"
                android:textColor="@color/navigatorTextColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/navigatorBackgroundColor"
                android:drawableLeft="@mipmap/celiangleixing_white"
                android:paddingLeft="15dp"
                android:text="贴标"
                android:textColor="@color/navigatorTextColor" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/navigatorBackgroundColor"
                android:drawableLeft="@mipmap/shinshophuojia_white"
                android:paddingLeft="15dp"
                android:text="打板"
                android:textColor="@color/navigatorTextColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/navigatorBackgroundColor"
                android:drawableLeft="@mipmap/celiangleixing_white"
                android:paddingLeft="15dp"
                android:text="计费"
                android:textColor="@color/navigatorTextColor" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/navigatorBackgroundColor"
                android:drawableLeft="@mipmap/shinshophuojia_white"
                android:paddingLeft="15dp"
                android:text="下面单"
                android:textColor="@color/navigatorTextColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/navigatorBackgroundColor"
                android:drawableLeft="@mipmap/celiangleixing_white"
                android:paddingLeft="15dp"
                android:text="出货"
                android:textColor="@color/navigatorTextColor" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/navigatorBackgroundColor"
                android:drawableLeft="@mipmap/shinshophuojia_white"
                android:paddingLeft="15dp"
                android:text="下面单"
                android:textColor="@color/navigatorTextColor"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>