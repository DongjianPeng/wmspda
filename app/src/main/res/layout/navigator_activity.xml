<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/navigatorBackgroundColor"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/bt_navigator_quit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:background="@mipmap/zhixiang_houtui_white" />


    <TextView
        android:id="@+id/tv_navigator_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/navigatorTextColor" />

    <ImageButton
        android:id="@+id/bt_navigator_setting"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:background="@mipmap/settings_white" />

</LinearLayout>