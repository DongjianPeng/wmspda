<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_home_subset_inbound_arrival"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/navigatorBackgroundColor"
                android:drawableLeft="@mipmap/shouhuo_white"
                android:paddingLeft="15dp"
                android:text="到货"
                android:textColor="@color/navigatorTextColor" />

            <Button
                android:id="@+id/bt_home_subset_inbound_measure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/navigatorBackgroundColor"
                android:drawableLeft="@mipmap/celiangleixing_white"
                android:paddingLeft="15dp"
                android:text="补货测量"
                android:textColor="@color/navigatorTextColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_home_subset_inbound_qc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/navigatorBackgroundColor"
                android:drawableLeft="@mipmap/celiangleixing_white"
                android:paddingLeft="15dp"
                android:text="验收测量"
                android:textColor="@color/navigatorTextColor" />

            <Button
                android:id="@+id/bt_home_subset_inbound_stock_in"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/navigatorBackgroundColor"
                android:drawableLeft="@mipmap/shinshophuojia_white"
                android:paddingLeft="15dp"
                android:text="上架"
                android:textColor="@color/navigatorTextColor" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>